{
    "name": "ryangjchandler/canvas2d",
    "description": "Create 2D images or graphics using a declarative API in PHP.",
    "license": "MIT",
    "readme": "https://github.com/ryangjchandler/canvas2d/README.md",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk"
        }
    ],
    "homepage": "https://github.com/ryangjchandler/canvas2d",
    "autoload": {
        "psr-4": {
            "RyanChandler\\Canvas2d\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "@php vendor/bin/pest",
        "lint": "vendor/bin/phpstan"
    }
}
